#include "services_dune.fcl"

#include "CompressedHitFinder.fcl"

process_name: HitFinder

source:
{
  module_type: RootInput
  maxEvents: -1
}

outputs:
{
  out1:
  {
    module_type: RootOutput
    fileName: "hits.root"
  }
}

services:
{
  @table::dunefd_services
}

# Faster
services.BackTrackerService: @erase
services.PhotonBackTrackerService: @erase

physics:
{
  producers:
  {
    myhitfinder: @local::standard_compressedhitfinder
  }

  hit_path: [ myhitfinder ]
  stream1: [ out1 ]
}
